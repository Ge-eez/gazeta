@model IEnumerable<Gazeta.Models.News>

@section Styles{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/explore.css" />
  

}

@{
    ViewData["Title"] = "Explore Page";
}

<div class="pt-2">
    <section class=" row">

        <div class="col-4 col-md-2 p-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-futbol  icon" style="color:blue"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="sport">Sport</a>
                <span></span>
            </div>
        </div>

        <div class="col-4 col-md-2 p-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-briefcase  icon" style="color:yellow"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="business">Business</a>
                <span></span>
            </div>
        </div>
        <div class="col-4 col-md-2 p-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-landmark  icon" style="color:black"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="politics">Politics</a>
                <span></span>
            </div>
        </div>
        <div class="col-4 col-md-2 p-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-flask  icon" style="color:green"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="science">Science</a>
                <span></span>
            </div>
        </div>
        <div class="col-4 col-md-2 p-0 mx-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-tshirt icon" style="color:hotpink"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="fashion">Fashion</a>
                <span></span>
            </div>
        </div>
        <div class="col-4 col-md-2 p-0 mx-0 mx-md-2 card shadow">
            <div class="card-body">
                <i class="fas fa-project-diagram  icon" style="color:royalblue"></i>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Gener" asp-route-topic="tech">Tech</a>
                <span></span>
            </div>
        </div>

    </section>
    <section id="special" class="mt-4 mx-1">
        <h5 class="mb-2">Fana Television</h5>
        <div class="single-post row">
            <img class="col-5 col-md-3" src="https://media.istockphoto.com/photos/breaking-news-world-news-with-map-backgorund-picture-id1182477852?k=6&m=1182477852&s=612x612&w=0&h=X-UipiiX5xcMw9dBhzKZWG7UcWjEOARl2s_oTVV8rtE=" alt="error" />
            <div class="col-7 col-md-9 mt-3">
                <span>Title of the news test length of the title </span>
                <h6>Fana Television</h6>
                <div><span>Release date</span></div>
                <p>This tutorial teaches ASP.NET Core MVC web development with controllers and views.</p>
            </div>
        </div>
    </section>
    <hr />

    <section>
        <h5>Trending News</h5>
        @foreach (var news in Model)
        {
            <div class="single-post row">
                @if (news.ImageURL != null)
                    {
                        <img class="col-5 col-md-3"  src="@("~/image/" + news.ImageURL)" asp-append-version="true" />
                    }
                <div class="col-7 col-md-9 mt-3">
                    @{
                        var textArray = @news.Headline.Split(" ");
                        if (textArray.Length > 10)
                        {
                            <span>@string.Join(" ",textArray.Take(10)) ...</span>
                        }
                        else
                        {
                            <span>@news.Headline</span>
                        }
                    }

                    <h6 id="company">@news.CompanyName  <span id="view"><i class="fas fa-eye"></i> @news.Likes  </span></h6>
                    <div><span>@news.PublishDate</span></div>
                    <p>
                        @{
                            var article = @news.Article.Split(" ");
                            if (article.Length > 50)
                            {
                                <span>@string.Join(" ", article.Take(50)) ...</span>
                                <p class="card-text">
                                    <a asp-action="Details" asp-route-id="@news.NewsId">Read More</a>
                                </p>
                            }
                            else
                            {
                                <span>@news.Article</span>
                                <p class="card-text">
                                    <a asp-action="Details" asp-route-id="@news.NewsId">Read More</a>
                                </p>
                            }
                        }
                    </p>
                </div>
            </div>
            
        }

        
    </section>
</div>

<script>

    function Clicked(topic) {
        $.get("/Home/Gener", function (topic) {
            $("p").html(topic);
        });
    }


</script>