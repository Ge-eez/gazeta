@section Styles{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/home.css" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/css/admin-2.min.css" rel="stylesheet">
}

@{
    ViewData["Title"] = "Company Home Page";
}

@{Layout="../Shared/companyLayout.cshtml";}

<div id="page-top">

    <div id="wrapper">
        <div class="container">

            <div class="container mr-5">
                <div class="row">

                    <div class="col-md-8 col-md-offset-2">

                        <h1 class="h3 mb-4 text-gray-800">Add post</h1>

                        <form action="" method="POST">



                            <div class="form-group">
                                <label for="title">Title <span class="require"></span></label>
                                <input type="text" class="form-control" name="title" />
                            </div>

                            <div class="form-group">
                                <label for="description">Content</label>
                                <textarea rows="5" class="form-control" name="description"></textarea>
                            </div>
                            <div class="form-group ">
                                <label for="filename">Upload an Image:</label> <br>
                                <input type="file" id="myFile" name="filename" value="Upload Image">

                            </div>



                            <div class="form-group d-flex justify-content-center my-5">
                                <button type="submit" class="btn btn-primary mr-4">
                                    Add
                                </button>
                                <button class="btn btn-danger ml-5">
                                    Cancel
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>

        </div>




    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</div>


