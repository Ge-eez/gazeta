@model IEnumerable<Gazeta.Models.News>

@{
    ViewData["Title"] = "Category";

}

@{Layout="../Shared/_CompanyLayout.cshtml";}


                <div class="container-fluid">   

                    <div class="row">
                        
                        <div class="col-xl-3 col-md-6 mb-4 ml-auto">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-primary text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Business"> Business </a></div>

                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-briefcase fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-success text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Entertainment"> Entertainment </a></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-film fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-md-6 mb-4 mr-auto">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-info text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Health"> Health </a>
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                                <div class="col-auto">
                                                </div>
                                                
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-heartbeat fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div> 

                      <div class="row">

                        <div class="col-xl-3 col-md-6 mb-4 ml-auto">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-primary text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Technology"> Technology </a></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-rocket fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                       
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-success text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Financial Services"> Financial Services</a> </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-money-check-alt fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xl-3 col-md-6 mb-4 mr-auto">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl font-weight-bold text-info text-uppercase mb-1">
                                                <a asp-action="Categories" asp-route-genre="Others"> Others </a>
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                                <div class="col-auto">
                                                </div>
                                                
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div>                   

                    <div class="row">                        
                        <div class="col-xl-8 col-lg-7 ml-auto mr-auto ">
                            <div class="card shadow mb-4 ">
                             
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Latest News</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                       
                                    </div>
                                </div>
                              
                                <div class="card-body">
                                        <div class="container">
                   

                @foreach (var item in Model) {       

                    <div class="card ml-3 my-5"  >
                        <div class="row g-0">
                            <div class="col-md-4">
                                    @if (item.ImageURL != null) {                                            
                                        <img src="@("~/image/" + item.ImageURL)" asp-append-version="true" class="img-fluid " style="width: 300px; height:300px;" />
                                    }
                            </div>
                            <div class="col-md-6 pl-0 no-gutters ">
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Headline)</h5>
                                    <p class="card-text">
                                        @if ( item.Article.Length <= 25) {@Html.DisplayFor(modelItem => item.Article)} else { @Html.DisplayFor(modelItem => item.Article.Substring(0, 25))} 

                                    </p>
                                    <p class="card-text">
                                        <a asp-action="NewsDetail" asp-route-id="@item.NewsId">Read More</a> 
                                    </p>
                                  
                                    <p class="card-text">
                                        <small class="text-muted">@Html.DisplayFor(modelItem => item.PublishDate)</small>
                                       
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-2 py-5 ">
                              
                               <a type="button" class="btn btn-outline-primary   waves-effect mr-3 my-5 " asp-action="Edit" asp-route-id="@item.NewsId"><i class="fas fa-edit "
                                aria-hidden="true"></i></a>
                               <a type="button" class="btn btn-outline-danger  waves-effect " asp-action="Delete" asp-route-id="@item.NewsId"><i class="fas fa-trash "
                                aria-hidden="true"></i></a>

 
                            </div>
                        </div>
                    </div>
        
            }
            </div>

            </div>
            </div>
        </div>        
        
    </div>  
    

</div>

